<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/member_info_image_container_height"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member_image_at_member_info_dialog"
            android:layout_width="@dimen/image_view_at_member_info_dialog_radius"
            android:layout_height="@dimen/image_view_at_member_info_dialog_radius"
            android:src="@drawable/placeholder"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/member_image_at_member_info_dialog"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/member_name_text_view_at_member_info_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/member_dialog_info_text_size"/>

            <TextView
                android:id="@+id/member_position_text_view_at_member_info_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/member_dialog_info_text_size"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_line_height"
        android:background="@color/dialog_horizontal_line_color_day_mode"
        android:layout_marginTop="@dimen/horizontal_line_half_margin"
        android:layout_marginBottom="@dimen/horizontal_line_half_margin"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/member_email_text_view_at_member_info_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/member_dialog_info_text_size"
            android:drawablePadding="@dimen/drawable_padding"
            android:drawableLeft="@drawable/icon_email24px"/>

        <TextView
            android:id="@+id/member_birthday_text_view_at_member_info_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/member_dialog_info_text_size"
            android:drawablePadding="@dimen/drawable_padding"
            android:drawableLeft="@drawable/icon_birthday24px"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_line_height"
        android:background="@color/dialog_horizontal_line_color_day_mode"
        android:layout_marginTop="@dimen/horizontal_line_half_margin"
        android:layout_marginBottom="@dimen/horizontal_line_half_margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/member_company_text_view_at_member_info_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:drawablePadding="@dimen/drawable_padding"
            android:textSize="@dimen/member_dialog_info_text_size"
            android:drawableLeft="@drawable/icons_factory24px"/>

        <TextView
            android:id="@+id/member_designatin_text_view_at_member_info_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:drawablePadding="@dimen/drawable_padding"
            android:textSize="@dimen/member_dialog_info_text_size"
            android:drawableLeft="@drawable/icon_designation24px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_line_height"
        android:background="@color/dialog_horizontal_line_color_day_mode"
        android:layout_marginTop="@dimen/horizontal_line_half_margin"
        android:layout_marginBottom="@dimen/horizontal_line_half_margin"/>

</LinearLayout>